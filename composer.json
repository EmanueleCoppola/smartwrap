{
    "name": "emanuelecoppola/smartwrap",
    "description": "Smarter wordwrap for PHP",
    "version": "1.1.0",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "EmanueleCoppola\\SmartWrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EmanueleCoppola\\SmartWrap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
