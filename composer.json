{
    "name": "emanuelecoppola/smartwrap",
    "description": "Smarter wordwrap for PHP",
    "version": "0.0.3",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 | ^8.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "EmanueleCoppola\\SmartWrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EmanueleCoppola\\SmartWrap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\""
    }
}
